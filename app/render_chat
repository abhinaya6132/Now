def render_chat(session):
    st.subheader("Chat with AI Assistant")

    # Show technical questions based on tech stack
    if "Tech Stack" in session.candidate_info and session.candidate_info["Tech Stack"]:
        st.markdown("### Technical Questions")
        questions = session.generate_technical_questions(session.candidate_info["Tech Stack"])
        for q in questions:
            st.write(q)

    # User chat box
    user_input = st.text_input("You:")
    if user_input:
        if user_input.lower() in ["exit", "quit", "bye"]:
            st.write(session.end_conversation())
        else:
            st.write("AI Assistant:", "Please answer the questions or continue the conversation.")
            session.chat_history.append({"user": user_input})
